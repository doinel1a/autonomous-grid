{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "artifacts/**", "cache/**", "typechain-types/**"]
    },
    "compile": {
      "outputs": ["artifacts/**", "cache/**", "typechain-types/**"]
    },
    "node": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["compile"]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^compile"]
    },
    "clean": {
      "cache": false
    },
    "deploy:local": {
      "dependsOn": ["compile"],
      "cache": false
    },
    "deploy:sepolia": {
      "dependsOn": ["compile"],
      "cache": false
    }
  }
}

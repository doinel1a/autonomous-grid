{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "build": "hardhat compile",
    "node": "hardhat node",
    "test": "hardhat test",
    "typecheck": "tsc --noEmit",
    "lint": "solhint \"contracts/**/*.sol\"",
    "lint:fix": "solhint \"contracts/**/*.sol\" --fix",
    "clean": "hardhat clean && rm -rf cache artifacts typechain-types",
    "setup:testToken:local": "hardhat run scripts/test-token-setup/local.ts",
    "setup:testToken:sepolia": "hardhat run scripts/test-token-setup/sepolia.ts",
    "deploy:testToken:local": "hardhat ignition deploy ignition/modules/TestToken.ts --network localhost",
    "deploy:testToken:sepolia": "hardhat ignition deploy ignition/modules/TestToken.ts --network sepolia",
    "create:spark": "tsx scripts/hedera/create-spark-token.ts",
    "query:spark": "tsx scripts/hedera/query-spark-info.ts",
    "query:supply-key": "tsx scripts/hedera/query-supply-key.ts",
    "test:signature": "tsx scripts/hedera/test-signature.ts",
    "test:keys": "tsx scripts/hedera/test-keys.ts",
    "fund:contract": "tsx scripts/hedera/fund-contract.ts",
    "deploy:controller:testnet": "tsx scripts/hedera/deploy-spark-controller.ts",
    "associate:token": "tsx scripts/hedera/associate-token.ts",
    "transfer:supply-key": "tsx scripts/hedera/transfer-supply-key.ts",
    "mint:spark": "tsx scripts/hedera/mint-spark.ts",
    "burn:spark": "tsx scripts/hedera/burn-spark.ts",
    "query:production": "tsx scripts/hedera/query-production.ts",
    "transfer:energy": "tsx scripts/hedera/transfer-energy.ts",
    "consume:energy": "tsx scripts/hedera/consume-energy.ts",
    "query:balance": "tsx scripts/hedera/query-balance.ts",
    "query:transactions": "tsx scripts/hedera/query-transactions.ts",
    "query:eur-usd-price": "tsx scripts/hedera/query-eur-usd-price.ts"
  },
  "dependencies": {
    "@hashgraph/sdk": "2.75.0",
    "ethers": "6.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "5.0.0",
    "@types/node": "24.7.2",
    "dotenv": "17.2.3",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "3.0.7",
    "solhint": "6.0.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "viem": "2.30.0"
  }
}

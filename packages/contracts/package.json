{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "build": "hardhat compile",
    "node": "hardhat node",
    "test": "hardhat test",
    "typecheck": "tsc --noEmit",
